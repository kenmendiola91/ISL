\begin_inset Formula $K$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
E_{val}(h) & = & E_{out}(h)+O\left(\frac{1}{\sqrt{K}}\right)\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
