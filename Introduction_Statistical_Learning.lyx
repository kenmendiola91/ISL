\begin_inset Formula \begin{eqnarray*}
P(Y=k|X) & = & \frac{exp(\beta_{0k}+\beta_{1k}X_{1}+\dots+\beta_{pk}X_{p})}{\sum_{l=1}^{K}exp(\beta_{0l}+\beta_{1l}X_{1}+\dots+\beta_{pl}X_{p})}\end{eqnarray*}

\end_inset


